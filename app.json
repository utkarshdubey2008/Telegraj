
{
  "name": "Telegraph Uploader Bot",
  "description": "A Telegram bot that can upload files to Telegraph.",
  "repository": "https://github.com/yourusername/your-repo",
  "keywords": ["telegram", "bot", "telegraph"],
  "addons": [
    {
      "plan": "heroku-postgresql",
      "options": {
        "version": "12"
      }
    }
  ],
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "env": {
    "TELEGRAM_BOT_TOKEN": {
      "description": "The Telegram bot token."
    },
    "TELEGRAPH_SHORT_NAME": {
      "description": "The Telegraph short name."
    }
  },
  "scripts": {
    "start": "python bot.py"
  }
}

